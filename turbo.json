{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "db:generate": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "push": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".next/**"]
    },
    "lint": {},
    "lint:fix": {},
    "test": {
      "inputs": ["test/**/*.test.ts"]
    },
    "test:ui": {
      "inputs": ["test/**/*.test.ts"]
    },
    "test:dev": {
      "inputs": ["test/**/*.test.ts"],
      "cache": false
    },
    "test:setup": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^db:generate"],
      "cache": false
    }
  },
  "globalEnv": [
    "AUTH0_CLIENT_ID",
    "AUTH0_CLIENT_SECRET",
    "AUTH0_ISSUER",
    "BEE_DEBUG_ENDPOINT",
    "BEE_ENDPOINT",
    "BLOBSCAN_API_PORT",
    "CHAIN_ID",
    "CI",
    "DATABASE_URL",
    "FEEDBACK_WEBHOOK_URL",
    "GOOGLE_STORAGE_BUCKET_NAME",
    "GOOGLE_STORAGE_PROJECT_ID",
    "GOOGLE_SERVICE_KEY",
    "GOOGLE_STORAGE_API_ENDPOINT",
    "GOOGLE_STORAGE_ENABLED",
    "MAIN_STORAGE",
    "NEXTAUTH_URL",
    "NEXT_PUBLIC_NETWORK_NAME",
    "NEXT_PUBLIC_BEACON_BASE_URL",
    "NEXT_PUBLIC_EXPLORER_BASE_URL",
    "NEXT_RUNTIME",
    "NODE_ENV",
    "METRICS_ENABLED",
    "TRACES_ENABLED",
    "OTLP_AUTH_USERNAME",
    "OTLP_AUTH_PASSWORD",
    "OTEL_EXPORTER_OTLP_PROTOCOL",
    "OTEL_EXPORTER_OTLP_ENDPOINT",
    "POSTGRES_STORAGE_ENABLED",
    "REDIS_QUEUE_HOST",
    "REDIS_QUEUE_PASSWORD",
    "REDIS_QUEUE_PORT",
    "REDIS_QUEUE_USERNAME",
    "SECRET_KEY",
    "SENTRY_DSN_API",
    "SKIP_ENV_VALIDATION",
    "SWARM_STORAGE_ENABLED",
    "VERCEL_URL",
    "TS_NODE"
  ]
}
