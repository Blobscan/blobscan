{
  "name": "@blobscan/rest-api-server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean": "git clean -xdf node_modules",
    "dev": "pnpm run init:bucket && pnpm with-env ts-node-dev --require ./src/scripts/print-banner.ts --require ./src/scripts/instrumentation.ts --respawn --transpile-only --exit-child ./src/index.ts",
    "start": "pnpm with-env ts-node --require ./src/scripts/print-banner.ts --require ./src/scripts/instrumentation.ts src/index.ts",
    "profile": "pnpm with-env node -r ts-node/register --prof --require ./src/scripts/instrumentation.ts src/index.ts",
    "with-env": "dotenv -e ../../.env --",
    "init:bucket": "pnpm with-env ts-node ../../scripts/init-bucket.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "@blobscan/api": "^0.0.1",
    "@blobscan/blob-storage-manager": "^0.0.1",
    "@blobscan/logger": "^0.0.1",
    "@blobscan/open-telemetry": "^0.0.1",
    "@blobscan/zod": "^0.0.1",
    "@opentelemetry/instrumentation-express": "^0.33.0",
    "body-parser": "^1.20.2",
    "bullmq": "^4.13.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^4.6.2",
    "trpc-openapi": "^1.2.0"
  },
  "devDependencies": {
    "@blobscan/eslint-config": "^0.0.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/swagger-ui-express": "^4.1.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@blobscan/eslint-config/base"
    ]
  }
}
