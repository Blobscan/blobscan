{
  "name": "@blobscan/db",
  "version": "0.1.1",
  "private": true,
  "main": "./index.ts",
  "types": "./index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "pnpm with-env prisma generate",
    "db:push": "pnpm with-env prisma db push --skip-generate",
    "db:migrate": "pnpm with-env prisma migrate dev",
    "db:seed": "pnpm with-env prisma db seed",
    "db:reset": "pnpm with-env prisma db push --force-reset",
    "dev": "pnpm with-env prisma studio --port 5556",
    "with-env": "dotenv -e ../../.env --",
    "with-env:test": "dotenv -e ../../.env.test --",
    "test": "pnpm with-env:test vitest",
    "test:ui": "pnpm with-env:test vitest --ui"
  },
  "prisma": {
    "seed": "ts-node prisma/seed/main.ts"
  },
  "dependencies": {
    "@blobscan/dayjs": "^0.0.2",
    "@blobscan/logger": "^0.0.3",
    "@blobscan/open-telemetry": "^0.0.3",
    "@prisma/client": "^5.5.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "js-sha256": "^0.9.0",
    "prisma": "^5.5.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@blobscan/eslint-config/base"
    ]
  }
}
