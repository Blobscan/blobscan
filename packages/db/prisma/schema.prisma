generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model IndexerMetadata {
  id          Int         @id @default(autoincrement())
  lastSlot    Int         @unique
}

model Blob {
  id          Int         @id @default(autoincrement())
  versionedHash String
  commitment  String
  data        String      @db.Text
  txHash      String
  index       Int
  @@unique([txHash, index])
  transaction Transaction @relation(fields: [txHash], references: [hash])
}

model Block {
  id          Int           @id
  hash        String        @unique 
  number      Int           @unique
  timestamp   Int           @unique
  slot        Int           @unique
  transactions Transaction[]
}

model Transaction {
  id        String          @id
  hash      String          @unique
  from      String
  to        String?
  blockNumber Int
  blobs      Blob[]
  block     Block  @relation(fields: [blockNumber], references: [number])
}


