// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model IndexerMetadata {
  id          Int         @id
  lastSlot    Int         @unique
}

model Blob {
  id          Int         @id @default(autoincrement())
  versionedHash String
  commitment  String
  data        String      @db.Text
  txHash      String
  index       Int
  timestamp   DateTime
  @@unique([txHash, index])
  transaction Transaction @relation(fields: [txHash], references: [hash])
}

model Block {
  id          Int           @id
  hash        String        @unique 
  number      Int           @unique
  timestamp   DateTime      @unique
  slot        Int           @unique
  transactions Transaction[]
}

model Transaction {
  id        String          @id
  hash      String          @unique
  from      String
  to        String?
  blockNumber Int
  timestamp DateTime
  blobs      Blob[]
  block     Block  @relation(fields: [blockNumber], references: [number])
}

// Block Metrics
model BlockOverallStats {
  id              Int      @id @default(autoincrement())
  // avgDataGasUsed  Float
  totalBlocks     Int
  updatedAt DateTime
}

model BlockDailyStats {
  dayId             DateTime @id
  totalBlocks     Int
  // avgDataGasUsed   Float?
}

// Transaction metrics

model TransactionOverallStats {
  id                Int      @id @default(autoincrement())
  // avgSize         Float
  // avgDataGasUsed        Float
  totalTransactions Int
  updatedAt DateTime
  // totalSize Int
  // uniqueSenders     Int
  // uniqueReceivers   Int
}

model TransactionDailyStats {
  dayId             DateTime @id
  totalTransactions Int
  // uniqueSenders    Int?
  // uniqueReceivers  Int?
}

// Blob metrics

model BlobOverallStats {
  id                  Int      @id @default(autoincrement())
  totalBlobs          Int
  updatedAt DateTime
  // totalDataSize Float
  // avgDataSize         Float
  // dataSizeDistribution Json
}

model BlobDailyStats {
  dayId              DateTime    @id 
  totalBlobs Int
  // avgBlobSize     Float?
  // sizeDistribution Json?
}




